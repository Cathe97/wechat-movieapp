/* pages/home/home.wxss */
.rcmd-card{
  position: relative;
  margin:50rpx 100rpx 0rpx;
  width: 650rpx;
}

.rcmd-poster{
  width: 550rpx;
}

.rcmd-title{
  margin: 25rpx 0rpx;
  width: 550rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 45rpx
}

.rcmd-source{
  display: flex;
  margin: 10rpx 38rpx;
  align-items: center;
}

.rcmd-icon{
  border-radius: 50%;
  width: 80rpx;
}

.rcmd-name{
  margin-left: 10rpx;
  font-size: 30rpx;
}

.nav{
  background-color: #ffffff;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  width: 100%;
  border-top: 1px solid rgba(150, 150, 150, 0.5);
}

.nav-item{
  display: flex;
  flex: 1 1 auto;
  justify-content: center;
  align-items: center;
}

.nav-icon{
  width: 55rpx;
}

.nav-name{
  font-size: 32rpx;
  margin: 0 10rpx;
}